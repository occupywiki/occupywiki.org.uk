
<VirtualHost *:80>
  ServerName occupywiki.org.uk
  ServerAlias wiki.occupytogether.co.uk
  ServerAlias www.occupywiki.org.uk
  ServerAlias occupywiki.co.uk
  ServerAlias www.occupywiki.co.uk
  ServerSignature Off
  ServerAdmin wiki@occupywiki.org.uk 
  UseCanonicalName On

  # Possible values include: debug, info, notice, warn, error, crit,
  # alert, emerg.
  LogLevel warn
  ErrorLog ${APACHE_LOG_DIR}/occupywiki.org.uk_error.log
  CustomLog ${APACHE_LOG_DIR}/occupywiki.org.uk_access.log combined

  <IfModule mod_status.c>
    #
    # Allow server status reports generated by mod_status,
    # with the URL of http://servername/server-status
    #
    <Location /server-status>
      SetHandler server-status
      Order deny,allow
      Deny from all
      Allow from 127.0.0.1 ::1 93.95.227.69 localhost occupywiki.org.uk
    </Location>
  </IfModule>

  # Redirect everything apart from server-status requests to https
  RedirectMatch ^/(?!server-status)(.*) https://occupywiki.org.uk/$1

  # Redirect everything to https
  #Redirect / https://occupywiki.org.uk/

</VirtualHost>
